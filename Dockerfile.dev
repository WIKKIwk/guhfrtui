FROM golang:1.25-bookworm

RUN apt-get update \
  && apt-get install -y --no-install-recommends \
    bash \
    ca-certificates \
    curl \
    iproute2 \
    iputils-ping \
    net-tools \
  && rm -rf /var/lib/apt/lists/*

WORKDIR /workspace/new_era_go

COPY go.mod go.sum ./
RUN go mod download

CMD ["bash", "-lc", "sleep infinity"]
